{
  "name": "obreiro-virtual",
  "version": "1.0.0",
  "description": "Sistema de Gestão Eclesiástica - Backend Django + Frontend React",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python manage.py runserver",
    "dev:frontend": "cd frontend && npm run dev",
    "setup": "npm install && npm run install:all && npm run migrate",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "migrate": "cd backend && python manage.py migrate",
    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "django",
    "react",
    "typescript",
    "church-management",
    "saas"
  ],
  "author": "ObreiroVirtual Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/melojrx/obreiro-digital-landing.git"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0"
  }
}
