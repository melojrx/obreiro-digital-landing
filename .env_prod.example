# =================================
# OBREIRO DIGITAL - AMBIENTE DE PRODUÇÃO
# =================================

# Django Core
DJANGO_SETTINGS_MODULE=config.settings.prod
DJANGO_SECRET_KEY=YOUR_SECRET_KEY_HERE
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=obreirovirtual.com,www.obreirovirtual.com,localhost,127.0.0.1,backend

# Database PostgreSQL
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD_HERE
DATABASE_URL=postgres://obreiro_prod:YOUR_POSTGRES_PASSWORD_HERE@postgres:5432/obreiro_prod

# Redis Cache & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/2
CELERY_RESULT_BACKEND=redis://redis:6379/3

# Frontend URL para QR Codes (SEM /api/v1 - apenas a URL base do frontend)
FRONTEND_URL=https://www.obreirovirtual.com

# CORS Production
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://obreirovirtual.com,https://www.obreirovirtual.com

# Email Backend (produção)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=YOUR_EMAIL_HERE
EMAIL_HOST_PASSWORD=YOUR_EMAIL_PASSWORD_HERE

# Superuser para produção
DJANGO_SUPERUSER_EMAIL=admin@obreirovirtual.com
DJANGO_SUPERUSER_PASSWORD=YOUR_ADMIN_PASSWORD_HERE

# SSL/TLS
USE_HTTPS=True
SECURE_SSL_REDIRECT=True

# Logging
DJANGO_LOG_LEVEL=INFO

# Sentry (opcional)
# SENTRY_DSN=https://your-sentry-dsn-here

# AWS S3 (opcional para arquivos estáticos)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name