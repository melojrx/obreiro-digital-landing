# Django Core
DJANGO_SETTINGS_MODULE=config.settings.prod
DJANGO_SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_VERY_SECURE_KEY_HERE
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database PostgreSQL
DATABASE_URL=postgres://obreiro_prod:CHANGE_THIS_PASSWORD@postgres:5432/obreiro_prod

# Redis Cache & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/2
CELERY_RESULT_BACKEND=redis://redis:6379/3

# Frontend URL para QR Codes
FRONTEND_URL=https://yourdomain.com

# CORS Production
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Backend (produção)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=CHANGE_THIS_EMAIL@gmail.com
EMAIL_HOST_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD

# Superuser para produção
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# SSL/TLS
USE_HTTPS=True
SECURE_SSL_REDIRECT=True

# Logging
DJANGO_LOG_LEVEL=INFO

# Sentry (opcional)
# SENTRY_DSN=https://your-sentry-dsn-here

# AWS S3 (opcional para arquivos estáticos)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name